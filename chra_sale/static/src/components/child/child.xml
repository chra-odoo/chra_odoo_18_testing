<templates>
    <t t-name="chra_sale.Child" owl="1">
        <p><t t-esc="props.title"/></p>
        <t t-slot="default"/>
        <h1>Counter: <t t-esc="props.counter"/></h1>
        <ol>
            <li t-foreach="props.items" t-as="item" t-key="item_index">
                <t t-esc="'Index ' + item_index"/>: <t t-esc="item"/>
            </li>
        </ol>
        <button class="btn btn-primary m-5" t-on-click="focusMyInput">Focus My Input</button>
        <input class="form-input input m-5" t-ref="myInput"/>
        <p>Data from parent: <t t-esc="env.data"/></p>
    </t>
</templates>